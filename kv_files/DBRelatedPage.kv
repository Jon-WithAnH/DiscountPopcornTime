#:kivy 1.0
# Creating the main .kv files
# the difference is that it is
# the heart of the Application
# Other are just Organs
  
<DBRelatedPage>:
    # Assigning Grids
    # cols: 2
    # Building search layout
    rlayout: rlayout
    GridLayout:
        rows: 3
        SearchLayout:
            manager: root.manager
            size_hint_y: None
            height: dp(30)  # Have to tell the widget the proper height, even though it's already defined in class
        ResultsLayout:
            manager: root.manager
            id :rlayout
        PageNumbers:
            manager: root.manager
            size_hint_y: None
            height: dp(30)
        